{
  "name": "rollup-plugin-dev",
  "version": "1.1.1",
  "description": "a development server for rollup",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/pearofducks/rollup-plugin-dev"
  },
  "scripts": {
    "dev": "cd dev && rollup -w -c",
    "dev:build": "cd dev && rollup -c",
    "build": "rollup -c",
    "version": "npm run build",
    "postversion": "npm publish && git push --follow-tags",
    "lint": "eslint --ignore-path .gitignore --ext .js .",
    "test": "ava --verbose"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "rollup",
    "development",
    "static",
    "proxy",
    "server"
  ],
  "author": "Dave Honneffer <pearofducks@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "colorette": "^1.1.0",
    "date-time": "^3.1.0",
    "koa": "^2.11.0",
    "koa-better-http-proxy": "^0.2.4",
    "koa-mount": "^4.0.0",
    "koa-route": "^3.2.0",
    "koa-static": "^5.0.0",
    "ms": "^2.1.2"
  },
  "devDependencies": {
    "ava": "^3.5.0",
    "eslint": "^6.8.0",
    "esm": "^3.2.25",
    "rollup": "^2.0.6",
    "sinon": "^9.0.1",
    "supertest": "^4.0.2"
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
